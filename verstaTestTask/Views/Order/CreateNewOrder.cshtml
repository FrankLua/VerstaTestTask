@using verstaTestTask.ViewsModel.View
@model OrderIndexModel;

<section>
    <div class="modal fade" id="createOrder" tabindex="-1" aria-labelledby="createOrder" aria-hidden="true" data-bs-theme="dark">
        <div class="modal-dialog modal-xl">
            <form action="/Order/SetOrder" method="post" class="needs-validation">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="createOrder">Меню создания нового заказа</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    
                        <div class="mb-3">
                            <label for="recipient-name" class="col-form-label">Город отправителя</label>
                            <input name="SenderCity" type="text" class="form-control" required>                            
                        </div>
                        <div class="mb-3">
                            <label for="recipient-name" class="col-form-label">Адресс отправителя</label>
                            <input name="SenderAddress" type="text" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label for="recipient-name" class="col-form-label">Город получателя</label>
                            <input name="RecipientCity" type="text" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label for="recipient-name" class="col-form-label">Адресс получателя</label>
                            <input name="RecipientAddress" type="text" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label for="recipient-name" class="col-form-label">Вес посылки в кг</label>
                            <input name="Weight" type="number" step="0.01" class="form-control col-1" required>
                        </div>
                        <div class="mb-3">
                            <label for="recipient-name" class="col-form-label">Дата забора груза</label>
                            <input name="Date" type="date" placeholder="dd-mm-yyyy" value="" min="2024-01-18" max="2030-12-31" class="form-control col-1" required>
                        </div>
                    
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-success">Создать</button>
                </div>            
            </div>
            </form>
        </div>
    </div>
</section>